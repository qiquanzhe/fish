<UserControl x:Class="fish.workSpaceUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:fish"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="180" Height="170">
    <Grid Cursor="Hand">
        <Image x:Name="image" Height="130" Margin="10,30,10,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="25" Width="160" FontFamily="Microsoft YaHei UI" FontSize="18" Foreground="#FFB39DDB"/>

    </Grid>
</UserControl>
